import "experimental/time.uv" as Time;
import "print.uv";

fn println(dt: Time.DateTime) {
	let time = dt.time;

	let pm = time.hours > 12;
	if (pm) {
		time.hours = time.hours - 12;
	}

	print(time.hours);
	print(":");
	print(time.minutes);
	print(":");
	print(time.seconds);

	if (pm) {
		print("PM");
	} else {
		print("AM");
	}

	print(" ");
	let date = dt.date;
	print(date.day);
	print("/");
	print(date.month);
	print("/");
	println(date.year);

	return;
}

fn main(): int {
	let now = Time.Now();
	print("Unix  : ");
	println(now);

	let dt = Time.GetLocalDateTime(now);
	print("Local : ");
	println(dt);

	print("UTC   : ");
	dt = Time.GetUTCDateTime(now);
	println(dt);

	return 0;
}