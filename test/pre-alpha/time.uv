import "experimental/time.uv" as Time;
import "print.uv";

fn main(): int {
	let now = Time.Now();

	let dt = Time.GetUTCDateTime(now);
	let time = dt.time;

	if (time.hours > 12) {
		time.hours = time.hours - 12;
	}

	print(time.hours);
	print(":");
	print(time.minutes);
	print(":");
	print(time.seconds);

	print(" ");
	let date = dt.date;
	print(date.day);
	print("/");
	print(date.month);
	print("/");
	print(date.year);

	return 0;
}